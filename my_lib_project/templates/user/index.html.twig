{% extends 'base.html.twig' %}

{% block title %}Log In{% endblock %}

{% block body %}
    <div class="login-container">
        <div class="login-box">
            <h1>Log In</h1>

            {% for flash_message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ flash_message }}
                </div>
            {% endfor %}

            {% for flash_message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ flash_message }}
                </div>
            {% endfor %}

            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="form-group">
                {{ form_label(form.password) }}
                {{ form_widget(form.password) }}
                {{ form_errors(form.password) }}
            </div>

            <button type="submit">Log In</button>
            {{ form_end(form) }}

            <p class="register-link">
                Don't have an account? <a href="{{ path('app_register') }}">Sign up</a>
            </p>
        </div>
    </div>

    <style>
        body {
            background: url('https://www.transparenttextures.com/patterns/old-paper.jpg');
            font-family: 'Courier New', Courier, monospace;
            color: #3c2f2f;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            width: 100%;
            max-width: 400px;
            padding: 20px;
        }

        .login-box {
            background: rgba(255, 245, 224, 0.95);
            border: 2px solid #8b6f47;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            padding: 30px;
            text-align: center;
        }

        h1 {
            font-size: 2em;
            margin-bottom: 20px;
            color: #5c4033;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
        }

        .alert-success {
            background: #d4edda;
            color: #155724;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #c3e6cb;
            border-radius: 5px;
        }

        .alert-danger {
            background: #f8d7da;
            color: #721c24;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #f5c6cb;
            border-radius: 5px;
        }

        .form-group {
            text-align: left;
            margin-bottom: 15px;
        }

        label {
            font-size: 1.1em;
            color: #5c4033;
            margin-bottom: 5px;
            display: block;
        }

        input[type="email"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            font-size: 1em;
            border: 1px solid #8b6f47;
            border-radius: 5px;
            background: #fff8e1;
            box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: border-color 0.3s;
        }

        input[type="email"]:focus,
        input[type="password"]:focus {
            border-color: #5c4033;
            outline: none;
        }

        .form-error {
            color: #721c24;
            font-size: 0.9em;
            margin-top: 5px;
        }

        button {
            background: #5c4033;
            color: #fff;
            padding: 12px;
            font-size: 1.1em;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s;
            text-transform: uppercase;
            letter-spacing: 1px;
            width: 100%;
        }

        button:hover {
            background: #3c2f2f;
        }

        .register-link {
            margin-top: 20px;
            font-size: 1em;
            color: #5c4033;
        }

        .register-link a {
            color: #8b6f47;
            text-decoration: none;
        }

        .register-link a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}